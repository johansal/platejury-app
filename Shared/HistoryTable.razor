<div class="container text-center">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-10">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Track</th>
                        <th scope="col">Added by</th>
                        <th scope="col">Total pts.</th>
                        <th scope="col">#</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var h in History.OrderByDescending(x => x.Points)) 
                    {
                        <tr>
                            <td>@h.TrackName</td>
                            <td>@h.UserName</td>
                            <td>@h.Points</td>
                            <td>@h.Position</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col">
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public IEnumerable<Data.HistoryTrack> History {get; set;} = [];
}